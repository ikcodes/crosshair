block footer_js
	script.
		$(function(){
			//====================//
			//  HELPER FUNCTIONS	//
			//====================//
			$.fn.isFullyInViewport = function(firstElement = 0) {	// Pass a 1 for first element on the page
			
				// Calc offset of both navs 
				var elementTop = $(this).offset().top;
				var elementBottom = elementTop + $(this).outerHeight();
				var viewportTop = $(window).scrollTop();
				var viewportBottom = viewportTop + $(window).height();
				
				if(firstElement == 1){	// Don't do nav offset for first page element
					return elementTop < viewportBottom || elementBottom < viewportBottom;
				}
				else{	// Part of element is in view
					var navOffset = 50 + 75;
					elementTop = elementTop - navOffset;
					return elementTop < viewportTop || elementBottom < viewportBottom;
				}
			};
			
			$.fn.isInViewpoint = function() {
				var elementTop = $(this).offset().top;
				var elementBottom = elementTop + $(this).outerHeight();
				var viewportTop = $(window).scrollTop();
				var viewportBottom = viewportTop + $(window).height();
				
				// Traditional return for when ANY PART of element is in view
				return elementBottom > viewportTop && elementTop < viewportBottom;
			};
			
			//====================//
			//  RUN STICKY SUBNAV	//
			//====================//
			function runSubnav(){	// Hide and show "The Process" subnav if on-screen
				if($("#steps").isInViewpoint()){
					$("#theProcessSubnav").addClass("stuck");
				}else{
					$("#theProcessSubnav").removeClass("stuck");
				}
				
				// Run Step 1
				if($("#step1").isFullyInViewport(1)){
					if(!$("#step1Nav").hasClass("active")){
						$("#step1Nav").addClass("active");
						$("#step2Nav").removeClass("active");	// Remove neighbor
					}
				}else if($("#step1Nav").hasClass("active")){
					$("#step1Nav").removeClass("active");
				}
				
				// Run Step 2
				if($("#step2").isFullyInViewport()){
					if(!$("#step2Nav").hasClass("active")){
						$("#step2Nav").addClass("active");
						$("#step1Nav").removeClass("active");	// Remove neighbors
						$("#step3Nav").removeClass("active");
					}
				}else if($("#step2Nav").hasClass("active")){
					$("#step2Nav").removeClass("active");
				}
				
				// Run Step 3
				if($("#step3").isFullyInViewport()){
					if(!$("#step3Nav").hasClass("active")){
						$("#step3Nav").addClass("active");
						$("#step2Nav").removeClass("active");	// Remove neighbors
						$("#step4Nav").removeClass("active");
					}
				}else if($("#step3Nav").hasClass("active")){
					$("#step3Nav").removeClass("active");
				}
				
				// Run Step 4
				if($("#step4").isFullyInViewport()){
					if(!$("#step4Nav").hasClass("active")){
						$("#step4Nav").addClass("active");
						$("#step3Nav").removeClass("active");	// Remove neighbor
					}
				}else if($("#step4Nav").hasClass("active")){
					$("#step4Nav").removeClass("active");
				}
			}
			
			//===============//
			// SLICK SLIDERS //
			//===============//
			$("#artistSliders").slick({
				autoplay: true,
				autoplaySpeed: 2500,
				prevArrow: "#artistPrev",
				nextArrow: "#artistNext",
			});
			
			$("#featureGrid").slick({
				autoplay: true,
				autoplaySpeed: 1000,
				nextArrow: "#featuredPrev",
				nextArrow: "#featuredNext",
				slidesToShow: 5,
				slidesToScroll: 1,
				responsive: [{	// Brekpoints (x down) change qty slides shown
					breakpoint: 1024,
					settings: {
						slidesToShow: 4,
					}
				},{
					breakpoint: 600,
					settings: {
						slidesToShow: 2,
					}
				},{
					breakpoint: 480,
					settings: {
						slidesToShow: 1,
					}
				}],
			});
			
			$(window).on('resize scroll', function() {
				runSubnav();
			});
		});